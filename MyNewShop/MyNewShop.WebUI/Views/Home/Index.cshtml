@model MyNewShop.Core.ViewModels.ProductListViewModel

@{
    ViewBag.Title = "Home Page";
}
<h1>Products</h1>
<div class="col-md-2">
    <h4>Filter by Category</h4>
    <div class="list-group">
      
          @Html.ActionLink("All","Index",null,new { @class=Request["Category"]==null? "list-group-item active":"list-group-item"})
        @foreach (var item in Model.ProductCategories)
        {
            @Html.ActionLink(item.CategoryName, "Index", new { category = item.CategoryName },new { @class=Request["Category"]==item.CategoryName? "list-group-item active":"list-group-item"})
        }
      
    </div>
</div>
<div class="col-md-10">
    @foreach (var item in Model.Products)
{
    <div class="col-md-4" style="height:450px;padding:10px;border:solid thin whitesmoke;text-align:center">
        <div class="col-md-12">
            <img class="img-responsive" src="~/Content/ProductImages/@item.Image" />
        </div>
        <div class="col-md-12">
            <strong>
                @Html.ActionLink(item.Name, "Details", new { id = item.Id })
            </strong>
        </div>
        <div class="col-md-12">
            <p>@item.Description</p>
        </div>
        <div class="col-md-12">
            <p>@item.Price</p>
        </div>
        <div class="col-md-12">
            <a href="#" class="btn btn-default">Add to Basket</a>
        </div>
    </div>
}
</div>
<div class="md-col-12 clearfix"/>

