@model IEnumerable<MyNewShop.Core.Models.Product>

@{
    ViewBag.Title = "Home Page";
}
<h1>Products</h1>
@foreach (var item in Model)
{
    <div class="col-md-4" style="height:450px;padding:10px;border:solid thin whitesmoke;text-align:center">
        <div class="col-md-12">
            <img class="img-responsive" src="~/Content/ProductImages/@item.Image" />
        </div>
        <div class="col-md-12">
            <strong>
                @Html.ActionLink(item.Name, "Details",new { id=item.Id})
            </strong>
        </div>
        <div class="col-md-12">
            <p>@item.Description</p>
        </div>           
        <div class="col-md-12">
            <p>@item.Price</p>
        </div>            
        <div class="col-md-12">
            <a href="#" class="btn btn-default">Add to Basket</a>
        </div>            
    </div>
}
<div class="md-col-12 clearfix"/>

